@page "/Publier"
@using CovoitEco.APP.Views.Annonce
@inherits CovoitEco.APP.Components.Annonce.AnnonceComponent

<PageTitle>Publier</PageTitle>

<h3>Publier vôtre annonce</h3>


<div class="row">
    <div class="col">

        <EditForm Model=@request OnValidSubmit="CreateAnnonceProfile">
            <div class="form-group">
                <label for="ANN_VilleDepart">VilleDepart</label>
                <InputText @bind-Value="request.ANN_VilleDepart" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="ANN_DateDepart">DateDepart</label>
                <InputDate @bind-Value="request.ANN_DateDepart" ParsingErrorMessage="Must be a date"/>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </EditForm>

    </div>
</div>

